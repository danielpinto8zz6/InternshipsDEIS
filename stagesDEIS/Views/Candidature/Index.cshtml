@model IEnumerable<stagesDEIS.Models.Candidature>

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<div class="table-responsive">
    <table class="table">
        <thead>
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.Branch)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Grades)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.UnfinishedGrades)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Candidate)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Result)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Proposal)
                </th>
                <th></th>
            </tr>
        </thead>
        <tbody>
    @foreach (var item in Model) {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Branch)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Grades)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.UnfinishedGrades)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Candidate.UserName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Result)
                </td>
                <td>
                    <a class="btn btn-primary btn-sm" asp-controller="Proposal" asp-action="Details" asp-route-id="@item.ProposalId">Proposal</a>
                </td>
                <td>
                    @if (this.User.IsInRole("Professor") && item.Result == State.STANDBY || this.User.IsInRole("Company") && item.Result == State.STANDBY)
                    {
                        <a class="btn btn-success btn-sm" asp-action="Accept" asp-route-id="@item.CandidatureId">Aprove</a>
                        <a class="btn btn-danger btn-sm" asp-action="Reject" asp-route-id="@item.CandidatureId">Reject</a>
                    }
                    <a class="btn btn-secondary btn-sm" asp-action="Details" asp-route-id="@item.CandidatureId">Details</a>
                    @if (this.User.IsInRole("Student"))
                    {
                        <a class="btn btn-warning btn-sm" asp-action="Edit" asp-route-id="@item.CandidatureId">Edit</a>
                        <a class="btn btn-danger btn-sm" asp-action="Delete" asp-route-id="@item.CandidatureId">Delete</a>
                    }
                </td>
            </tr>
    }
        </tbody>
    </table>
</div>