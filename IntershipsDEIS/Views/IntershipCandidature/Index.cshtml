@model IEnumerable<IntershipsDEIS.Models.IntershipCandidature>

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Candidate)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Intership)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Branch)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Grades)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.UnfinishedGrades)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Result)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                <a asp-action="Details" asp-controller="User" asp-route-id="@item.CandidateId">@Html.DisplayFor(modelItem => item.Candidate.UserName)</a>
            </td>
            <td>
                <a asp-action="Details" asp-controller="Intership" asp-route-id="@item.IntershipId">@Html.DisplayFor(modelItem => item.Intership.Title)</a>
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Branch)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Grades)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.UnfinishedGrades)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Result)
            </td>
            <td>
                @if (this.User.IsInRole("Student") && item.Result == State.ACCEPTED)
                {
                    <a class="btn btn-warning btn-sm" asp-action="Evaluate" asp-route-id="@item.IntershipCandidatureId">Evaluate</a>
                }
                @if (this.User.IsInRole("Company") && item.Result == State.STANDBY)
                {
                    <a class="btn btn-success btn-sm" asp-action="Accept" asp-route-id="@item.IntershipCandidatureId">Aprove</a>
                    <a class="btn btn-danger btn-sm" asp-action="Reject" asp-route-id="@item.IntershipCandidatureId">Reject</a>
                }
                    <a class="btn btn-secondary btn-sm" asp-action="Details" asp-route-id="@item.IntershipCandidatureId">Details</a>
                @if (this.User.IsInRole("Student") && item.Result == State.STANDBY)
                {
                    <a class="btn btn-warning btn-sm" asp-action="Edit" asp-route-id="@item.IntershipCandidatureId">Edit</a>
                    <a class="btn btn-danger btn-sm" asp-action="Delete" asp-route-id="@item.IntershipCandidatureId">Delete</a>
                }
            </td>
        </tr>
}
    </tbody>
</table>
